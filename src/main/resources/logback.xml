<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 seconds">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{MMM-dd HH:mm:ss.SSS} %mdc{projectMarker} %-5level [%logger{0}] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="ua.lifebook" level="debug"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>