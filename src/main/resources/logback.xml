<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %d{MM/dd HH:mm:ss.SSS} : %cyan([%thread]) %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ua.lifebook" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.apache" level="info"/>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>